    "private": true,
    "dependencies": {
        "axios": "^0.21.1",
        "bootstrap": "^4.3.1",
        "ejs": "^2.7.1",
        "env-cmd": "^10.0.1",
        "express": "^4.17.1",
        "react": "^16.9.0",
        "react-dom": "^16.9.0",
        "react-redux": "^7.1.1",
        "react-router-dom": "^5.0.1",
